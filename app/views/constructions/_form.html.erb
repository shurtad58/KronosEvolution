<div class="container">
   <div class="row">
      <div class="col-xs-6 col-xs-offset-3">
         <h1 class="text-center" id="text-show"><%= form_title %></h1>   

         <%= form_for @construction do |f| %>

            <% if @construction.errors.any? %>
              <div class="alert alert-danger">
                <ul>
                <% @construction.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
               <%= f.text_field :name, class:"form-control input-lg", placeholder:"Nombre del Curso" %>
            </div>   

            <div class="form-group">
               <%= f.url_field :image_url, class:"form-control input-lg", placeholder:"URL de la foto del docente" %>
            </div>

            <div class="form-group">
               <%= f.number_field :capacity, :step => 1, class:"form-control input-lg", placeholder:"Cantidad de estudiantes" %>
            </div>

            <div class="form-group">
               <%= f.text_field :city, class:"form-control input-lg", placeholder:"Sede" %>
            </div>   

            <div class="form-group">
               <%= f.text_area :description, rows:"2", class:"form-control input-lg", placeholder:"Nombre del docente" %>
            </div>

            <div class="form-group">
               <%= f.submit form_button, class:"btn btn-#{form_button_class} btn-block btn-lg" %>
            </div>

         <% end %>
            
      </div>
   </div>
</div>